<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_small_8"
    android:paddingBottom="@dimen/spacing_small_8"
    android:paddingLeft="@dimen/spacing_tiny_4"
    android:paddingRight="@dimen/spacing_tiny_4">

    <ImageView
        android:id="@+id/podcastImage"
        android:contentDescription="@string/image_content_description"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/spacing_tiny_4"
        android:adjustViewBounds="true"
        android:scaleType="fitStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_tiny_4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/podcastNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/spacing_tiny_4"
            android:textStyle="bold"
            tools:text="Name"/>

        <TextView
            android:id="@+id/podcastLastUpdatedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="@dimen/font_small_12"
            tools:text="Last updated" />

    </LinearLayout>


</LinearLayout>